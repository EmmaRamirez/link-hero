@import 'normalize'

header,
main,
footer
  margin: 0 auto;
  max-width: 40rem;


header
  background: linear-gradient(to left, purple, red);
  border-bottom: 4px solid #ddd;
  color: #f;
  margin-top: 1rem;
  text-align: center;
  padding: 1rem;
  h1
    margin: 0;

form
  padding: 1rem;
  .link-filter, button
    font-size: 2rem;
  .link-filter
    border: 1px solid #ccc;
    border-bottom: 4px solid #ddd;
    margin-left: 5rem;
    padding: .25rem;
  button
    border: 1px solid darken(purple, 15%);
    border-bottom: 4px solid darken(purple, 15%);
    border-radius: 4px;
    background: purple;
    color: white;
    display: inline-block;
    padding: .25rem .75rem;

.fa-star[data-favorite=true],
.fa-star:hover
  color: gold;

.link
  background: #eee;
  border-bottom: 4px solid #ddd;
  font-size: 1.15rem;
  margin: 1rem;
  padding: 1rem;
  position: relative;
  a
    display: inline-block;
    color: red;
    text-decoration: none;
    width: 70%;
  &:hover
    border-bottom: 4px solid purple;
    a
      color: darken(red, 15%);
  .tag
    background: #222;
    border-radius: 16px;
    color: #eee;
    font-size: .8rem;
    padding: .5rem;
    position: absolute;
    right: 5%;
    top: 25%;
